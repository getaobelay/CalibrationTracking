<Window x:Class="CalibrationTracking.DesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalibrationTracking.DesktopUI" xmlns:controls="clr-namespace:CalibrationTracking.DesktopUI.CustomControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FlowDirection="RightToLeft">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Our side menu custom control-->
        <!--here-->
        <controls:MenuWithSubMenuControl HasIcon="True" SubMenuPadding="15,0,0,0"/>


        <!--and frame for pages to navigate when a menu is selected-->
        <Frame x:Name="MainWindowFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
